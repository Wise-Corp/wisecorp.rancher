apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: letsencrypt-staging
spec:
  acme:
    email: {{ rancher_options.letsencrypt_email }}
    privateKeySecretRef:
      name: letsencrypt-staging
    server: https://acme-staging.api.letsencrypt.org/directory
    http01: {}
    solvers:
      - http01:
          ingress:
            class: "{{ rancher_options.letsEncrypt_ingress_class }}" 
        selector: {}